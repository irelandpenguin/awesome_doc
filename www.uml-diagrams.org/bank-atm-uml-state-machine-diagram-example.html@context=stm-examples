var menuVisible = false;

function mobile_menu()
{
  if (menuVisible)
  {
	document.getElementById("navigation_btn").innerHTML = "Menu \u25BA";
    document.getElementById("navigation_dsk").style.display = "none";
    menuVisible = false;
  }
